<h2>PRODUCTS VIEW</h2>
{{#each products}}
  <div>
    <h5>{{title}}</h5>
    <p>{{description}}</p>
    <h5>{{this.price}}</h5>
  </div>
{{/each}}
{{! validacion de queries para el handlebar, limit SIEMPRE llega, porque lo valida el router}}
{{#if hasPrevPage}}
  <a href="/?limit={{limit}}&sort={{sort}}&page={{prevPage}}{{#if category}}&category={{category}}{{/if}}"><button>Pagina Anterior</button></a>
{{/if}}
{{#if hasNextPage}}
  <a href="/?limit={{limit}}&sort={{sort}}&page={{nextPage}}{{#if category}}&category={{category}}{{/if}}"><button>Pagina Siguiente</button></a>
{{/if}}